<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_lvrec"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/id_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/width_3_80"
        android:background = "@drawable/video_record_on" />

    <TextView
        android:id="@+id/id_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/width_1_80"
        android:textSize="@dimen/TextSize14"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/id_item_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/lvrec_operate"
        android:textSize="@dimen/TextSize14"
        android:layout_marginRight="@dimen/width_5_80"
        android:textColor="@color/white" />

</LinearLayout>
